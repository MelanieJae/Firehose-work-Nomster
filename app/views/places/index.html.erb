<% @places.each do |place| %>
	<div class="place-box col-xs-10 col-xs-offset-1">
		<h3><%= link_to place.name, place_path(place) %></h3><br />
		<i><%= place.address %></i><br /><br />
		<p><%= place.description %></p><br />
	
		<% if place.user.present? %>
			<small><%= place.user.email %></small>
		<% end %>

		<% if place.comments.present? %>
			<div class="col-xs-12">
    			<blockquote>
      				<% if place.comments.last.humanized_rating.present? %>
        				<b><%= place.comments.last.humanized_rating %></b> -
      				<% end %>
      		
      				<%= place.comments.last.message %></div>
      				<small><%= place.comments.last.user.email %></small>
      			</blockquote>
			</div>
		<% end %>
		</div>
	
<% end %>

<%-#Apple Store pagination style -%>
<div class="col-xs-12 apple_pagination">
	<%= will_paginate @places, :container => false %>
</div>


